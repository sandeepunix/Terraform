{
  "variables": {
     "aws_access_key": "",
     "aws_secret_key": ""
   },
  "builders": [{
     "type": "amazon-ebs",
     "access_key": "{{user `aws_access_key`}}",
     "secret_key": "{{user `aws_secret_key`}}",
     "region": "ap-south-1",
     "source_ami": "ami-5b673c34",
     "instance_type": "t2.micro",
     "ssh_username": "ec2-user",
     "ami_name": "packer-example {{timestamp}}"
     }],
   "provisioners": [{
      "type": "shell",
      "script": "script.sh",
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",    
      "pause_before": "10s"
    }]
}
